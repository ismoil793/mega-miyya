# AI Provider (openai, ollama, huggingface)
AI_PROVIDER=huggingface

# Hugging Face (Recommended for production - free hosted LLMs)
HF_API_KEY=your_huggingface_api_key
HF_MODEL=bigcode/starcoder2-7b

# Alternative HF models for code review:
# - bigcode/starcoder2-7b (recommended for code)
# - codellama/CodeLlama-13b-hf (good for code)
# - mistralai/Mistral-7B-Instruct-v0.2 (general purpose)
# - meta-llama/Llama-2-7b-chat-hf (general purpose)

# Ollama (local LLM - for development only)
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=codellama

# OpenAI (paid service)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mega-miyya?retryWrites=true&w=majority

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# JWT
JWT_SECRET=your_jwt_secret_key_here

# App
NEXTAUTH_URL=http://localhost:3004
NEXTAUTH_SECRET=your_nextauth_secret

# Optional: GitHub App (for private repos)
GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=your_github_app_private_key

# Optional: Default AI provider for new users
DEFAULT_AI_PROVIDER=openai 